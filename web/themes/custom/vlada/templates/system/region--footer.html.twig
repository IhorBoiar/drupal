{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-3">
          <a href="/"><img class="logo" src="/themes/custom/vlada/logo.svg" alt="Home"></a>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-2">
          <h2 class="footer-menu">Headings</h2>
          {{ elements.headings }}
        </div>
        <div class="col-xs-12 col-sm-4 col-md-2">
          <h2>Redaction</h2>
          {{ elements.redaction }}
        </div>
        <div class="col-xs-12 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-0">
          <h2>Social</h2>
          {{ elements.social }}
        </div>
      </div>
    </div>
    <div class="footer-info container">
      <div class="footer-text">{{ elements.footerinfo }}</div>
    </div>
  </div>
{% endif %}
